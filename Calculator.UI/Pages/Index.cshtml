@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div id="error-container" class="alert alert-danger" style="display: none;"></div>
                    <div class="form-group">
                        <input type="text" id="calc-display" class="form-control" readonly />
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="integers-only-checkbox">
                        <label class="form-check-label" for="integers-only-checkbox">Integers only</label>
                    </div>
                    <div class="row mt-3">
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">1</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">2</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">3</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-operator">+</button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">4</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">5</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">6</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-operator">-</button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">7</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">8</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">9</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-operator">*</button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-digit">0</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-decimalpoint" id="decimal-point-button">,</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-clear">C</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-secondary btn-block btn-input-operator">/</button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button class="btn btn-primary btn-block" id="btn-calculate">Calculate</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">History</h5>
                    <ul id="calc-history" class="list-group">
                        @foreach (var item in Model.History)
                        {
                            <li class="list-group-item">@item</li>
                        }
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>